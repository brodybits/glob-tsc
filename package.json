{
  "name": "glob-tsc",
  "version": "0.0.1-dev",
  "description": "Typescript compiler wrapper to support 'filesGlob' tsconfig.json file option",
  "main": "bin/glob-tsc.js",
  "files": [
    "bin",
    "lib",
    "README.md"
  ],
  "bin": {
    "glob-tsc": "./bin/glob-tsc.js"
  },
  "scripts": {
    "test": "_mocha && node bin/glob-tsc.js --allowJs --checkJs --noEmit -g test/**/*.mock.js",
    "test:watch": "_mocha --watch",
    "coverage": "istanbul cover _mocha",
    "build": "crlf --set=LF bin/*.js",
    "prepublish": "istanbul check-coverage"
  },
  "keywords": [
    "tsc",
    "glob",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/brodybits/glob-tsc"
  },
  "license": "ISC",
  "devDependencies": {
    "chai": "^3.5.0",
    "crlf": "^1.1.0",
    "istanbul": "^0.4.4",
    "mocha": "^2.5.3",
    "mock-require": "^1.3.0",
    "typescript": "^3.6.4"
  },
  "peerDependencies": {
    "typescript": "^3.0.0"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "fs": "0.0.2",
    "glob": "^7.0.5",
    "path": "^0.12.7"
  }
}
